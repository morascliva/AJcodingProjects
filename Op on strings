int compare (char str1[25],char str2[25])
{
int i=0;
while(str1[i]==str2[i]&&str1[i]!='\0')
i++;
if(str1[i]>str2[i])
return 1;
else if (str [i]< str2[i])
return -1;
else 
return 0;
}
int search(char scr[],char scr[])
{int i,j,first 0;
i=0;j=0;
while(src[i]!='\0')
{
while(scr[i]!=str[0]&&scr[i]='\0')
i++;
if (scr[i]=='\0')
return(-1);
first occ =1;
while (scr[i]==str[i]&&scr[i]!='\0'&&str[j]!='\0')
{
