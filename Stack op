#include<stdio.h>
#define MAXSIZE 5
int stack[MAXSIZE];
int top=-1;
void push(void);
void pop(void);
void display(void);
void palindrome(void);
void main()
{
   int choice;
   while(1)
          { printf("Stack Operation \n");
            printf("\n 1. Push\n");
            printf("\n 2. Pop\n ");
            printf("\n 3. Display");
            printf("\n 4. Palindrome");
            printf("\n 5. Exit\n ");
            printf("Enter yor choice ");
            scanf("%d",&choice);
            switch(choice)
                    {
                         case 1 :push();
                                 break;
                         case 2 :pop();
                                 break;
                         case 3 :display();
                                 break;
                         case 4 :if(palindrome()==0)
                                 printf("\n Stack has palindrome content ");
                                 else
                                 printf("\n Stack has non palidrome content \n);
                                 break;
                         case 5 :return ;
                         default:printf("\n Enter a valid choice ");
                     }
          }
}

void push()
{ 
   int c;
   if(top==(MAXSIZE-1)
    {  
     printf("\n Stack Overflow\n");
     return;
    }
   else 
    {   
     printf("Enter the element to be pushed \n ");
     scanf("%d",&c);
     stack[++top]=c;
     }
 return;
 }
 void pop()
           {
               if(top==-1)
               {
                 printf("\n Stack Underflow\n ");
                 return;
                }
               else
               {
                 printf("poped element is= %d \n ",stack[top--]);
               }
          }
    int palindrome()
    {
     int rev[MAXSIZE];
     int i,j;
     for(i=0;i<=top;i++)
     rev[i]=stack[i];
     for(i=o;j=top;i<=top;i++;j--)
         { 
            if(rev[i]==stack[j])
            continue;
            else
            return -1;
         }
    return 0;
  }   
     
              
